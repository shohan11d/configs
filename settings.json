{
   // =====================
   // GENERAL CONFIGURATION
   // =====================
   // ---Font---
   "editor.fontSize": 16,
   "editor.fontFamily": "Source Code Pro",
   "window.zoomLevel": 0.4,

   //---Yank---
   "vim.highlightedyank.color": "#e4e4e41a",
   "vim.highlightedyank.textColor": "#e6e3de",
   "vim.highlightedyank.enable": true,
   "vim.highlightedyank.duration": 180,

   // ---Zenmode Fix---
   "zenMode.hideLineNumbers": false,
   "zenMode.silentNotifications": false,
   "zenMode.hideStatusBar": false,

   //---Extension---
   "vim.surround": true,
   "vim.easymotion": true,

   //---Prettier---
   "prettier.singleQuote": true,
   "prettier.tabWidth": 3,
   "editor.tabSize": 3,
   "prettier.printWidth": 80,
   "editor.renderLineHighlight": "none",
   "editor.detectIndentation": false,
   "editor.defaultFormatter": "esbenp.prettier-vscode",
   "editor.renderWhitespace": "none",
   "[html]": { "editor.defaultFormatter": "vscode.html-language-features" },
   "[css]": {
      "editor.defaultFormatter": "vscode.css-language-features"
   },
   "[snippets]": {
      "editor.defaultFormatter": "vscode.json-language-features"
   },
   "[jsonc]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
   },

   //---General---
   "vim.leader": " ",
   "vim.foldfix": true,
   "editor.lineNumbers": "relative",
   "editor.cursorSurroundingLines": 6,
   "window.customMenuBarAltFocus": false,
   "window.newWindowDimensions": "fullscreen",
   "window.menuBarVisibility": "compact",

   //?
   "extensions.experimental.affinity": { "vscodevim.vim": 1 },
   "editor.linkedEditing": true,
   "terminal.integrated.fontSize": 15,
   // "editor.acceptSuggestionOnCommitCharacter": true,
   "breadcrumbs.enabled": false,
   "editor.stickyScroll.enabled": false,
   "editor.lightbulb.enabled": "off",
   // "diffEditor.ignoreTrimWhitespace": false,
   "workbench.iconTheme": "material-icon-theme",
   "files.autoSave": "afterDelay",
   "editor.formatOnSave": true,
   // "window.customMenuBarAltFocus": false,
   // "window.newWindowDimensions": "fullscreen",
   // "window.menuBarVisibility": "compact",
   "editor.quickSuggestions": {
      "strings": true
   },
   "tailwindCSS.includeLanguages": {
      "javascript": "javascript",
      "html": "HTML"
   },

   "emmet.includeLanguages": {
      "javascript": "javascriptreact"
   },

   // "scm.diffDecorationsGutterWidth": 3,
   // "scm.diffDecorations": "all",
   // "scm.diffDecorationsGutterPattern": { "added": false, "modified": false },
   "search.exclude": {
      "**/node_modules": true,
      "**/bower_components": true,
      "**/*.code-search": true
   },

