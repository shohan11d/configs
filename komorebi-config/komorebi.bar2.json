{
   "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.30/schema.bar.json",
   "monitor": {
      "index": 1,
      "work_area_offset": {
         "left": 0,
         "top": 25,
         "right": 0,
         "bottom": 15
      }
   },
   "position": { "end": { "x": 1920, "y": 35 } },
   "font_family": "JetBrainsMono Nerd Font",
   "theme": {
      "palette": "Base16",
      "name": "TokyoCityDark",
      "accent": "Base0D"
   },

   "left_widgets": [
      {
         "Komorebi": {
            "workspaces": {
               "enable": true,
               "hide_empty_workspaces": true
            },
            "layout": {
               "enable": false
            },
            "focused_window": {
               "enable": true,
               "show_icon": true
            }
         }
      }
   ],
   "right_widgets": [
      {
         "Media": {
            "enable": false
         }
      },
      {
         "Storage": {
            "enable": false
         }
      },
      {
         "Memory": {
            "enable": false
         }
      },
      {
         "Network": {
            "enable": false,
            "show_total_data_transmitted": false,
            "show_network_activity": false
         }
      },
      {
         "Date": {
            "enable": false,
            "format": "DayDateMonthYear"
         }
      },
      {
         "Time": {
            "enable": false,
            "format": "TwentyFourHour"
         }
      },
      {
         "Battery": {
            "enable": false
         }
      }
   ]
}
